@model IEnumerable<treasurehunt.Core.Data.Models.Quetes.Quete>

@{
    ViewData["Title"] = "Home Page";
}


<h1>Les Quetes</h1>

@foreach (var quete in Model)
{
    <div class="row">
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">@quete.Titre</span>
                    <p>
                        @quete.EvenementsDeQuete.First();
                    </p>
                </div>
                <div class="card-action">
                    <a asp-area="" asp-controller="Quete" asp-action="Edit" asp-route-id="@quete.Id">Modifier</a>
                </div>
            </div>
        </div>
    </div>
}

