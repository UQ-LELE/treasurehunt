@model treasurehunt.Core.Data.Models.Quest.Question

@{
    treasurehunt.Core.Data.Models.Quest.StoryEvent eventForQuestion = ViewBag.EventForQuestion;
}

<h2 class="center-align">Create question for event number @eventForQuestion.Number</h2>
<div class="divider"></div>

<a asp-action="Details" asp-controller="StoryEvent" asp-route-idSotryEvent="@eventForQuestion.Id" class=" waves-light btn">Back to event</a>
<div class="divider"></div>

<div class="row">
    <!--Event info-->
    <div class="col s12 m6">
        <div class="box">
            <div class="section">
                <h5>Title</h5>
                <div class="divider"></div>
                <p>  @eventForQuestion.Title</p>
            </div>
        </div>

        <div class="box">
            <div class="section">
                <h5>Description</h5>
                <div class="divider"></div>
                <p> @eventForQuestion.Description</p>
            </div>
        </div>
    </div>

    <!--Question create form-->
    <div class="col s12 m6 center-align">
        <div class="box">
            <form asp-action="CreatePost">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="input-field col s12">
                        <input asp-for="Title" type="text" class="validate" />
                        <label asp-for="Title">Question</label>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="input-field col s12" hidden>
                    <input asp-for="StoryEventId" value="@eventForQuestion.Id" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>