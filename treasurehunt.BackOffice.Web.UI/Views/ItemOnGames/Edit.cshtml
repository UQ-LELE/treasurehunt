@model treasurehunt.Core.Data.Models.ItemsOnGame.ItemOnGame

@{
    ViewData["Title"] = "Edit";
}

<h2 class="center-align">Edit item</h2>
<div class="divider"></div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<div class="divider"></div>

<div class="row center-align">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="input-field col s4 offset-s4">
                    <input asp-for="Name" type="text" class="validate" />
                    <label asp-for="Name">Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s4 offset-s4">
                    <input asp-for="Description" type="text" class="validate" />
                    <label asp-for="Description">Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="file-field input-field col s6 offset-s3">
                    <div class="btn">
                        <span>Image</span>
                        <input type="file" id="files" asp-for="Image" class="form-control" />
                        <span asp-validation-for="Image" class="text-danger"></span>

                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>
            </div>

            <div class="row">
                <input type="submit" value="Save" class="waves-effect waves-light btn" />
            </div>
        </form>
    </div>
</div>
