@model IEnumerable<treasurehunt.Core.Data.Models.ItemsOnGame.ItemOnGame>

@{
    ViewData["Title"] = "Index";
}
<h2 class="center-align">Items on game</h2>
<div class="divider"></div>

<!--button to create new item-->
<div class="center-align ">
    <a asp-action="Create" class=" waves-light btn">Create an item</a>
</div>
<div class="divider"></div>

<!--cards for each item-->
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col s12 m3">
            <div class="card sticky-action">
                <div class="card-image waves-effect waves-block waves-light">
                    <img src="data:image/jpg;base64,@Convert.ToBase64String(item.Image)" style="padding:20px">
                </div>
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4">@item.Name<i class="material-icons right">more_vert</i></span>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">@item.Name<i class="material-icons right">close</i></span>
                    <h5>@item.Name :</h5>
                    <p>@item.Description</p>
                </div>
            </div>
        </div>
    }
</div>